@{
  Layout = "_Layout";
}
<link href="~/css/client-creation.css" rel="stylesheet" type="text/css">

@model HairSalon.Models.Client;

<h1>Add Client</h1>
<div class="row">
  <div class="col-6 offset-3">
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required="required"})
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")
      <input type="submit" value="Create" class="btn btn-success"/>
    }
  </div>
</div>


<button class="btn btn-dark">@Html.ActionLink("Return to stylists", "Index", "Stylists")</button>
