@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Style)
  @Html.TextBoxFor(model => model.Style)
  @Html.LabelFor(model => model.Schedule)
  @Html.TextBoxFor(model => model.Schedule)
  <input type="submit" value="Create" class="btn btn-success">
}

<button class="btn btn-dark">@Html.ActionLink("Return to stylists", "Index")</button>