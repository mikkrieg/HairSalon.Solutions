@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h1>Delete Confirmation</h1> 
<h3>Are you sure you want to delete stylist: @Model.Name</h3>
@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-danger"/>
}

<button class="btn btn-dark">@Html.ActionLink("Return to stylists", "Index")</button>
<button class="btn btn-dark">@Html.ActionLink("Return to stylist", "Details", new { id = Model.StylistId })</button>