@{
  Layout = "_Layout";
}
<link href="~/css/delete-stylist.css" rel="stylesheet" type="text/css">

@model HairSalon.Models.Stylist;

<h1>Delete Confirmation</h1> 
<h3 class="text-center">Are you sure you want to delete stylist: @Model.Name</h3>
@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-danger"/>
}

<div class="row" id="only-row">
  <div class="col-2 offset-4">
    <button class="btn btn-dark">@Html.ActionLink("Return to stylists", "Index")</button>
  </div>
  <div class="col-2">
    <button class="btn btn-dark">@Html.ActionLink("Return to stylist", "Details", new { id = Model.StylistId })</button>
  </div>
</div>

