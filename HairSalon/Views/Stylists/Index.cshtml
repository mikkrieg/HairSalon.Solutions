@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;
<h1>All Stylists</h1>
@if(Model.Count == 0)
{
  <h3>No Stylists have been added yet</h3>
}

@foreach(Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}

<button class="btn btn-dark">@Html.ActionLink("Add stylist", "Create")</button>
<button class="btn btn-dark">@Html.ActionLink("Delete All", "DeleteAll")</button>

@if(Model.Count > 0)
{
  <button class="btn btn-dark">@Html.ActionLink("Create clients", "Create", "Clients")</button>
}
